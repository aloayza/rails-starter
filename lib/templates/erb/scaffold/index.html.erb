<%% provide(:title, '<%= plural_table_name.titleize %>') %>
<h2><%= plural_table_name.titleize %></h2>
<table>
  <thead>
    <tr>
<% attributes.reject(&:password_digest?).each do |attribute| -%>
      <th><%= attribute.human_name %></th>
<% end -%>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <%% @<%= plural_table_name %>.each do |<%= singular_table_name %>| %>
      <tr>
<% attributes.reject(&:password_digest?).each do |attribute| -%>
        <td><%%= link_to <%= singular_table_name %>.<%= attribute.name %>, <%= singular_table_name %> %></td>
<% end -%>
        <td class="text-center"><%%= link_to content_tag(:i, "edit", class: ["material-icons", "md-dark"]), edit_<%= singular_table_name %>_path(<%= singular_table_name %>) %></td>
        <td class="text-center"><%%= link_to content_tag(:i, "delete", class: ["material-icons", "md-dark"]), <%= singular_table_name %>, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <%% end %>
  </tbody>
</table>