<%%= form_for(@<%= singular_table_name %>) do |f| %>
  <%%= render 'shared/error_messages', object: f.object %>
  <% attributes.each do |attribute| -%>
    <% if attribute.password_digest? -%>
      <%%= f.password_field :password, placeholder: "Password" %>
      <%%= errors_for @<%= singular_table_name %>, :password %>
      <%%= f.password_field :password_confirmation, placeholder: "Confirmation" %>
      <%%= errors_for @<%= singular_table_name %>, :password_confirmation %>
    <% else -%>
      <%%= f.<%= attribute.field_type %> :<%= attribute.column_name %>, placeholder: "<%= attribute.column_name.titleize %>" %>
      <%%= errors_for @<%= singular_table_name %>, :<%= attribute.column_name %> %>
    <% end -%>
  <% end -%>
  <div class="row">
      <div class="small-12 columns text-center">
        <%%= f.submit "Submit" %>
      </div>
  </div>
<%% end %>